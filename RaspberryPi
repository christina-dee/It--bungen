while True:
    userDirection = input("Wählen Sie eine Fahrtrichtung durch \nEingabe des jeweiligen Kürzels aus: ")

    if userDirection == "fwd": 
        # GPIO.setup(pin_fwd, # GPIO.OUT)

        # GPIO.output(pin_fwd, # GPIO.HIGH)
        time.sleep(2)
        # GPIO.output(pin_fwd, # GPIO.LOW)
        # GPIO.cleanup()
        break

    elif userDirection == "bwd": 
        # GPIO.setup(pin_bwd, # GPIO.OUT)

        # GPIO.output(pin_bwd, # GPIO.HIGH)
        time.sleep(2)
        # GPIO.output(pin_bwd, # GPIO.LOW)
        # GPIO.cleanup()
        break

    elif userDirection == "lft": 
        # GPIO.setup(pin_lft, # GPIO.OUT)

        # GPIO.output(pin_lft, # GPIO.HIGH)
        time.sleep(2)
        # GPIO.output(pin_lft, # GPIO.LOW)
        # GPIO.cleanup()
        break

    elif userDirection == "rgt": 
        # GPIO.setup(pin_rgt, # GPIO.OUT)

        # GPIO.output(pin_rgt, # GPIO.HIGH)
        time.sleep(2)
        # GPIO.output(pin_rgt, # GPIO.LOW)
        # GPIO.cleanup()
        break
    else:
        print("Eingabe war fehlerhaft. Bitte wiederholen")

